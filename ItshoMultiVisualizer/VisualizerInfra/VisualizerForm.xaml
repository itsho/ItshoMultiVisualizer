<Window x:Class="ItshoMultiVisualizer.VisualizerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VisualizerForm"
        Width="300"
        Height="300">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Name="btnExit"
                          Click="btnExit_Click"
                          Header="Exit" />
            </MenuItem>

            <MenuItem Header="Display" IsEnabled="False" />
            <MenuItem Header="Help" IsEnabled="False" />
        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <ListBox Name="lstTablesNames" Grid.Column="0" />
            
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" />
            
            <DataGrid Name="dgvVisualizer" Grid.Column="1" />
        </Grid>
    </DockPanel>
</Window>
